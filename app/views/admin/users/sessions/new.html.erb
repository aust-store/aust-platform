<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email, label: "Seu email", type: :email, input_html: { size: "" } %>

  <%= f.input :password, label: "Sua senha", input_html: { size: "" } %>

  <% if devise_mapping.rememberable? %>
    <%= f.check_box :remember_me %> <%= f.label :remember_me, "Entrar automaticamente" %>
  <% end %>

  <div class="submit">
    <%= f.submit "Entrar", id: "sign_in" %>
  </div>
<% end %>

<%= render :partial => "admin/users/shared/links" %>
