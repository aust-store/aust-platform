<%= simple_form_for([:admin, @banner]) do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :position,
    collection: [
      [ t('activerecord.values.banner.position.all_pages_right'), "all_pages_right" ],
      [ t('activerecord.values.banner.position.main_page_central_rotative'), "main_page_central_rotative" ]
    ],
    include_blank: false %>

  <%= f.input :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.submit id: "submit" %> ou
  <%= link_to t('cancel'), "javascript: history.back()" %>
<% end %>
