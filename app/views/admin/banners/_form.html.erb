<%= simple_form_for([:admin, @banner]) do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :position,
    collection: [[t('.positions.all_pages_right'), "all_pages_right"]],
    include_blank: false %>

  <%= f.input :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.submit t('admin.banners.form.save') %> ou
  <%= link_to t('cancel'), "javascript: history.back()" %>
<% end %>
