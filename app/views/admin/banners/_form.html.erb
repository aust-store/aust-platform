<%= simple_form_for([:admin, @banner]) do |f| %>
  <%= f.input :title %>
  <%= f.input :url %>
  <%= f.input :position, collection: banner_position_select_options, include_blank: false %>

  <%= f.input :image %>
  <%= f.hidden_field :image_cache %>

  <%= f.submit id: "submit" %> ou
  <%= link_to t('cancel'), "javascript: history.back()" %>
<% end %>

