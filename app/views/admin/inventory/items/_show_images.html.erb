<div class="thumbs_gallery">

  <% if images[0..3].present? %>
    <% images[0..3].each_with_index do |image, index| %>
        <div class="box image">
          <div class="image_container">
            <%= image_tag image.image.url(:medium), width: 60 %>
          </div>

          <% if image.cover? %>
            <div class="cover">Capa</div>
          <% end %>
        </div>
    <% end %>
  <% end %>

  <% if images[4..10].present? %>
    <div class="box image mini_mini">
      <% images[4..10].each_with_index do |image, index| %>
        <div class="image_container mini_mini">
          <%= image_tag image.image.url(:medium), width: 30 %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
