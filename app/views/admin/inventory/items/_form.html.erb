<%= simple_form_for([:admin, @item]) do |f| %>

  <%= f.input :name,
        label: "Nome do item ou mercadoria",
        hint:  "",
        placeholder: "ex.: Parafuso 1cm",
        input_html: { id: "inventory_item_name" } %>

  <%= f.input :description,
        label: "Descrição" %>

  <%= f.input :merchandising,
        label: "Merchandising",
        hint: "Aparece abaixo do titulo do produto, na sua página de detalhes. Serve para atenção do cliente.
        Ex.: \" O melhor do Brasil!\" " %>

  <%= f.input :reference,
        label: "Código de referência",
        hint:  "Se você possui um código que identifique este produto internamente." %>

  <%= f.submit "Salvar item" %> ou
  <%= link_to "cancelar", "javascript: history.back()" %>

<% end %>
