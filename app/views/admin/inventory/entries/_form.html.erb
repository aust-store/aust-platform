<%= simple_form_for([:admin, :inventory, @entry], url: admin_inventory_good_entries_path) do |f| %>
  <%= f.input :description,
        label: "Descrição" %>

  <%= f.input :quantity,
        label: "Quantidade",
        hint:  "Um número inteiro (ex.: 10, 55, 109)" %>

  <%= f.input :cost_per_unit,
        label: "Custo unitário",
        hint:  "Ex.: R$ 11,00" %>

  <%= f.input :price,
        label: "Preço de venda",
        hint:  "Ex.: R$ 14,00" %>

  <%= f.submit "Cadastrar entrada no estoque", id: "submit_entry" %> ou
  <%= link_to "cancelar", "javascript: history.back()" %>
<% end %>
