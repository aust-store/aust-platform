<%= simple_form_for([:admin,@customer]) do |f| %>

  <%= f.input :first_name,
      hint: "",
      placeholder: t('admin.customers.form.first_name_example') %>

    <%= f.input :last_name,
      hint: "",
      placeholder: t('admin.customers.form.last_name_example') %>


    <%= f.input :description,
      hint: "",
        placeholder: t('admin.customers.form.description_example') %>

    <%= f.submit t('admin.customers.form.save'),id: "salvar_cliente" %> ou

    <%= link_to t('admin.customers.form.cancel'), "javascript: history.back()" %>

<% end %>
