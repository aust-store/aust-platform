<h1><%= t('.page_title') %></h1>

<div class="sign_up">
  <%= simple_form_for resource, :url => person_registration_path, html: { autocomplete: :off } do |f| %>

    <p><%= t('.compulsory_fields') %></p>
    <fieldset class="personal_info">
      <h2><%= t('.personal_info') %></h2>
      <%= f.input :email, type: :email, input_html: {}.merge(load_person_email) %>
      <%= f.input :first_name, as: 'string' %>
      <%= f.input :last_name, as: 'string' %>
      <%= f.input :password %>
      <%= f.input :password_confirmation %>
      <%= f.input :social_security_number, as: 'string' %>
    </fieldset>

    <fieldset class="contact_info">
      <div class="fields_with_illustration">
        <p><%= t(".phone_rules") %></p>
        <div class="inline_inputs">
          <%= f.input :home_area_number,   as: 'string', wrapper_html: { class: "input_with_label smaller" } %>
          <%= f.input :home_number,        as: 'string', wrapper_html: { class: "input_without_label big" }, label: false %>
        </div>
        <div class="inline_inputs">
          <%= f.input :mobile_area_number, as: 'string', wrapper_html: { class: "input_with_label smaller" } %>
          <%= f.input :mobile_number,      as: 'string', wrapper_html: { class: "input_without_label big" }, label: false %>
        </div>
      </div>
      <div class="illustration">
        <%= image_tag "store/illustrations/phones_illustration.png" %>
      </div>
    </fieldset>

    <fieldset class="address">
      <div class="fields_with_illustration">
        <h2>EndereÃ§o</h2>

        <%= f.fields_for :addresses do |address| %>
          <%= render partial: "shared/store_address_form", locals: { address: address } %>
        <% end %>
      </div>
      <div class="illustration">
        <%= image_tag "store/illustrations/illustrative_map.png" %>
      </div>
    </fieldset>

    <fieldset>
      <%= f.input :receive_newsletter, wrapper: :checkbox_inline, input_html: { checked: 'checked' } %>
    </fieldset>

    <div class="submit">
      <%= f.submit id: 'sign_up_button' %>
    </div>
  <% end %>
</div>
