<%= simple_form_for :cart, url: store_cart_path, html: { method: :put } do |form| %>

  <div class="cart">
    <div class="cart_table">
      <div class="columns_header">
        <div class="column description">
          Item
        </div>

        <div class="column quantity">
          Quantidade
        </div>

        <div class="column total_price">
          Subtotal
        </div>

        <div class="column item_options">
        </div>
      </div>

      <div class="products">
        <% @cart_items.each_with_index do |item, index| %>
        <div class="product order_item_<%= item.id %>">
          <div class="column description">
            <%= link_to item.name, store_product_path(id: item.entry_id) %>
          </div>

          <div class="column quantity">
            <input type="text" value="<%= item.quantity %>" class="id_<%= item.id %>" name="<%= "cart[item_quantities][#{item.id}]" %>" />
          </div>

          <div class="column total_price">
            <%= item.price %>
          </div>

          <div class="column item_options">
            <%= link_to image_tag("store/buttons/check_no.png"),
                  store_cart_items_path(id: item.id),
                  method: :delete,
                  name: "remove_order_item" %>
          </div>
        </div>
        <% end %>
      </div>

      <div class="items_total">
        <div class="column description">
          Total
        </div>

        <div class="column quantity">
        </div>

        <div class="column total_price">
          R$ 99,12
        </div>

        <div class="column options">
        </div>
      </div>

      <div class="shipping_configuration">
        <div class="column description">
          <div class="shipping_label">
            Frete
          </div>
          <div class="options" data-view="cartView">
            <div class="service_selection">
              <%= @cart.shipping_type %>
              <input
                type="radio"
                name="type"
                value="pac"
                <%= raw 'checked="checked"' if @cart.shipping_type == "pac" %>
                data-event="change"
                data-view-action="zipcodeCalculation" /> Normal (PAC)
              &nbsp;
              <input
                type="radio"
                name="type"
                value="sedex"
                <%= raw 'checked="checked"' if @cart.shipping_type == "sedex" %>
                data-event="change"
                data-view-action="zipcodeCalculation" /> Sedex
            </div>
            <div class="zipcode">
              CEP:
              <input
                type="text"
                value="<%= @cart.shipping_zipcode %>"
                name="zipcode"
                data-event="keyup"
                data-view-action="zipcodeCalculation" />
            </div>
          </div>
        </div>

        <div class="column summary">
          <span data-observe="zipcode.cost"><%= @cart.shipping_price %></span>
          <br />
          entrega em
          <span data-observe="zipcode.days"><%= @cart.shipping_days %></span>
          dias Ãºteis
        </div>
      </div>
    </div>

    <div class="actions">
      <div class="line">
        <div class="action_link">
          <%= link_to "Continuar comprando", store_path(@company.handle) %>
        </div>
        <div class="action_link">
          <%= form.submit "Atualizar carrinho" %>
        </div>
      </div>

      <div class="line">
        <div class="checkout">
          <%= link_to "", confirm_informations_store_checkout_path, id: "checkout_button" %>
        </div>
      </div>
    </div>
  </div>

<% end %>
