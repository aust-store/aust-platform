<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email,
    label: "Seu email",
    type: :email,
    required: false,
    input_html: { size: "" } %>

  <%= f.input :password,
    label: "Senha",
    required: false,
    input_html: { size: "" } %>

  <%= f.hidden_field :company_id, value: @company.id %>

  <% if devise_mapping.rememberable? %>
    <div class="input">
      <%= f.check_box :remember_me %> <%= f.label :remember_me, "Entrar automaticamente" %>
    </div>
  <% end %>

  <div class="submit">
    <%= f.submit "Entrar", id: "sign_in" %>
  </div>
<% end %>
