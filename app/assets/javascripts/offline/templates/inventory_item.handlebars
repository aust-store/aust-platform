{{view Ember.TextField valueBinding="searchQuery" placeholder="Digite o nome de um produto"}}

{{#each controller}}
  <table class="listing inventory_items">
    <tbody>
      <tr class="even">
        <td>
          <a href="#" {{action "addItem" this}}>
            {{name}}
          </a>
        </td>
      </tr>
    </tbody>
  </table>
{{else}}
  {{#if searchQuery}}
    {{#if model.isLoaded}}
      Nenhum resultado encontrado
    {{else}}
      Buscando...
    {{/if}}
  {{/if}}
{{/each}}
