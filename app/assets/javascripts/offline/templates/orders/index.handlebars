<h1>Todos os pedidos</h1>

{{!render 'orders_statistics'}}

<table class="listing orders">

  <thead>
    <th>Valor</th>
    <th></th>
  </thead>

  <tbody>
    {{#each controller}}
      <tr class="even">
        <td class="total">R$ {{money total}}</td>
        <td class="created_at">{{humanDate created_at}}</td>
      </tr>
    {{/each}}
  </tbody>

</table>
