<h1>Novo pedido</h1>

<section class="item_search">
</section>

{{render "inventory_item"}}

<br />
<br />
<h2>Items no pedido</h2>

<table class="listing carts">
  <thead>
    <th>Nome</th>
    <th>Referência</th>
    <th>Valor</th>
  </thead>

  <tbody>
    {{render "items"}}

    {{#each controller.items}}
      <tr class="even">
        <td>{{inventory_item.name}}</td>
        <td></td>
        <td>R$ {{price}}</td>
      </tr>
    {{/each}}

    {{#if subtotal}}
      <tr class="even cart_total">
        <td>Total do pedido</td>
        <td></td>
        <td>R$ {{subtotal}}</td>
      </tr>
    {{else}}
      <tr class="">
        <td colspan="3">Sem items no carrinho de compras</td>
      </tr>
    {{/if}}
  </tbody>
</table>

{{#if subtotal}}
  <a href="#" class="place_order_button" {{action "placeOrder"}}> </a>
{{/if}}

{{#if isOrderPlaced}}
  <div class="order_status order_placed">
    Pedido concluído com sucesso!
  </div>
{{/if}}
