<h1>Novo pedido</h1>

<section class="item_search">
</section>

{{render "inventory_item"}}

<br />
<br />
<h2>{{itemsQuantityHeadline}}</h2>

<table class="listing carts">
  <thead>
    <th>Nome</th>
    <th>Valor</th>
  </thead>

  <tbody>
    {{render "items"}}

    {{#each controller.items}}
      <tr class="even">
        <td>{{inventoryItem.name}}</td>
        <td>R$ {{money price}}</td>
      </tr>
    {{/each}}

    {{#if subtotal}}
      <tr class="even cart_total">
        <td>Total do pedido</td>
        <td>R$ {{money subtotal}}</td>
      </tr>
    {{else}}
      <tr class="">
        <td colspan="2">Sem items no carrinho de compras</td>
      </tr>
    {{/if}}
  </tbody>
</table>

{{#if subtotal}}
  <a href="#" class="place_order_button" {{action "placeOrder"}}>&nbsp;</a>
{{/if}}

{{#if isOrderPlaced}}
  <div class="order_status order_placed">
    Pedido conclu√≠do com sucesso!
  </div>
{{/if}}
