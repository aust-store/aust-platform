<section>
  <h1>Novo pedido</h1>

  <div class="item_search"></div>

  {{outlet inventoryItemSearch}}

  <br />
  <br />
  <h2>{{itemsQuantityHeadline}}</h2>

  {{render "items" controller.cartItems controller='cartItems'}}
</section>

<section class="cart_customer">
  <h2>Cliente</h2>
  {{outlet cartCustomer}}
</section>

<section class="cart_payment">
  <h2>Pagamento</h2>
  {{outlet cartPayment}}
</section>

{{#if isOrderReadyToBePlaced}}
  <section>
    <a href="#" class="place_order_button" title="place_order" {{action "placeOrder"}}>Finalizar pedido</a>
  </section>
{{/if}}

{{#if isOrderPlaced}}
  <section>
    <div class="order_status order_placed">
      Pedido conclu√≠do com sucesso!
    </div>
  </section>
{{/if}}
