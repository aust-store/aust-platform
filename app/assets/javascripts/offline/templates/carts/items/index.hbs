{{#if subtotal}}
<table class="listing carts">
  <tbody>
    {{#each controller}}
      <tr>
        <td>{{inventoryItem.name}}</td>
        <td>R$ {{money price}}</td>
        <td>
          <a href="javascript: void()" class='delete' {{action 'deleteItem' this}}>
            {{img 'delete' width='16' height='16'}}
          </a>
        </td>
      </tr>
    {{/each}}

    {{#if subtotal}}
      <tr class="even cart_total">
        <td>Total do pedido</td>
        <td colspan="2">R$ {{money subtotal}}</td>
      </tr>
    {{else}}
      <tr class="">
        <td colspan="2">Sem items no carrinho de compras</td>
      </tr>
    {{/if}}
  </tbody>
</table>
{{else}}
  Sem itens no pedido.
{{/if}}
